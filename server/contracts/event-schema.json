{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://mission-control.local/contracts/event-schema.json",
  "title": "Mission Control Event Envelope",
  "type": "object",
  "required": [
    "id",
    "schemaVersion",
    "eventVersion",
    "source",
    "type",
    "severity",
    "timestamp",
    "correlationId",
    "payload"
  ],
  "properties": {
    "id": {
      "type": "string",
      "pattern": "^[0-9a-f]{8}-[0-9a-f]{4}-7[0-9a-f]{3}-[89ab][0-9a-f]{3}-[0-9a-f]{12}$"
    },
    "schemaVersion": {
      "type": "string",
      "pattern": "^(0|[1-9]\\d*)\\.(0|[1-9]\\d*)\\.(0|[1-9]\\d*)(?:-(?:0|[1-9]\\d*|\\d*[a-zA-Z-][0-9a-zA-Z-]*)(?:\\.(?:0|[1-9]\\d*|\\d*[a-zA-Z-][0-9a-zA-Z-]*))*)?(?:\\+[0-9a-zA-Z-]+(?:\\.[0-9a-zA-Z-]+)*)?$"
    },
    "eventVersion": {
      "type": "integer",
      "minimum": 1
    },
    "source": {
      "type": "string",
      "enum": [
        "mission-control",
        "self-healing-systems",
        "immaculate-vibes"
      ]
    },
    "type": {
      "type": "string",
      "enum": [
        "agent.spawned",
        "agent.progress",
        "agent.completed",
        "build.failed",
        "build.passed",
        "heal.attempted",
        "heal.completed",
        "heal.escalated",
        "decision.required",
        "decision.resolved"
      ]
    },
    "severity": {
      "type": "string",
      "enum": [
        "info",
        "warn",
        "critical"
      ]
    },
    "timestamp": {
      "type": "string",
      "format": "date-time"
    },
    "correlationId": {
      "type": "string",
      "pattern": "^[0-9a-f]{8}-[0-9a-f]{4}-7[0-9a-f]{3}-[89ab][0-9a-f]{3}-[0-9a-f]{12}$"
    },
    "agentId": {
      "type": "string"
    },
    "payload": {
      "type": "object",
      "additionalProperties": true
    }
  },
  "additionalProperties": true
}
